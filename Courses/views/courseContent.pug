extends layout

block content
    .modal(id="display")
    .w3-card-4.w3-margin

        header.w3-container.w3-blue
          h1 Content

        .w3-container
                table.w3-table-all 
                    tr 
                        th Date 
                        th File
                        th Size
                        th Type 
                        th Operations
                        th Posts
                    each f in files 
                        tr
                            td= f.date
                            td(onclick='showFile(\"' + f.name + '\", \"' + f.mimetype + '\", \"' + idC + '\")')= f.name
                            td= f.size
                            td= f.mimetype
                            td #[button.w3-btn.w3-blue #[a(href="/" + idC + "/content/delete/" + f.name) Delete]]
                            td #[button.w3-btn.w3-blue #[a(href="/" + idC + "/content/" + f.name + "/posts") Create a Post!]]
                
                button.w3-btn.w3-blue #[a(href="/" + idC + "/content/upload") Upload a File!]

        footer.w3-container.w3-blue
          h5 Generated by EngWeb2023 in #{d} - #[a.back(href="/") Go back to the home page!]