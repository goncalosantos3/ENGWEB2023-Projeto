extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 File name: #{f.name}
        
    .w3-container
        ul.w3-ul.w3-card-4
            li #[b Date:] #{f.date}
            li #[b Mimetype:] #{f.mimetype}
            li #[b Size:] #{f.size}
            li #[b Description:] #{f.desc}

        center 
          p#confirm #[b Are you sure you want to delete this file?]

          button.w3-btn.w3-round.w3-margin.w3-green
              a(href="/" + idC + "/content/delete/" + f.name + "/confirm") Confirm 
          button.w3-btn.w3-round.w3-margin.w3-red
              a(href="/" + idC + "/content") Cancel
    footer.w3-container.w3-blue 
      h5 Generated by EngWeb2023 in #{d} - #[a(href="/") Go back to the Home Page!]
