extends layout

block content
  .w3-card-4.w3-margin

    header.w3-container.w3-blue
      h1= course.name

    .w3-container
        ul.w3-ul.w3-card-4
            li #[b Name:] #{course.name}
            li #[b When:] #{course.enq}
            li #[b Duration:] #{course.duration}
            li #[b Description:] #{course.desc}

        a(href="/" + course.id + "/content") Content

    footer.w3-container.w3-blue
      h5 Generated by EngWeb2023 in #{d} - #[a.back(href="/") Go back to the home page!]