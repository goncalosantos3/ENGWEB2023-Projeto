extends layout

block content
    .modal(id="display")
    .w3-card-4.w3-margin

        header.w3-container.w3-blue
          h1 Content

        .w3-container
                table.w3-table-all 
                    tr 
                        th Date 
                        th File
                        th Size
                        th Type 
                    each f in files 
                        tr(onclick='showFile(\"' + f.name + '\", \"' + f.mimetype + '\", \"' + idC + '\")')
                            td= f.date
                            td= f.name
                            td= f.size
                            td= f.mimetype

        footer.w3-container.w3-blue
          h5 Generated by EngWeb2023 in #{d} - #[a.back(href="/") Go back to the home page!]