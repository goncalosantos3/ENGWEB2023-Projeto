extends layout

block content
    .w3-card-4.w3-margin

        header.w3-container.w3-blue
          h1 Upload a File!

        .w3-container 
            // Action especifica para onde o form faz o pedido POST
            form.w3-container(action='/' + idC + '/content/upload' method="POST" enctype="multipart/form-data")
                label.w3-text-blue
                    b Select file
                input.w3-input.w3-border.w3-round.w3-margin.w3-light-grey(type="file" name="myFile")

                label.w3-text-blue
                    b Description 
                input.w3-input.w3-border.w3-round.w3-margin.w3-light-grey(type="text" name="desc")

                input.w3-btn.w3-blue(type="submit" value="Upload")

        footer.w3-container.w3-blue
          h5 Generated by EngWeb2023 in #{d} - #[a.back(href="/") Go back to the home page!]