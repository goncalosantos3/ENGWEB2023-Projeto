extends layout

block content
    .w3-card-4
    header.w3-container.w3-blue
      h1 Recurso

    .w3-container
        ul.w3-ul 
            li #[b Resource Name: ] #{r.resourceName}
            li #[b Title: ] #{r.title}
            li #[b Subtitle: ] #{r.subtitle}
            li #[b Type: ] #{r.type}
            li #[b Author: ] #{r.author}
        
        .w3-card-4
            header.w3-container.w3-purple
                h1 Posts

            .w3-container
                table.w3-table-all
                    tr 
                        th Utilizador
                        th Título
                        th Descrição
                        th Likes
                        th Date
                    each p in ps 
                        tr 
                            td= p.username
                            td= p.title
                            td= p.description
                            td= p.likes
                            td= p.date

    footer.w3-container.w3-blue
      address Generated in PGDRE at #{d}