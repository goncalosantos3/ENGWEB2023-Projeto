extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Formulário de Investigação de um Utilizador

    .w3-container
        form.w3-container(action="/profile/admin/investigate" method="POST")
            fieldset
              label Nome de Utilizador 
              select(name="username")
                each u in us
                  option(value=u.username) #{u.username}

            input.w3-btn.w3-green.w3-margin(type="submit" value="Investigar!")
            button.w3-btn.w3-round.w3-red.w3-margin
              a(href="/profile") Cancelar 
            
    footer.w3-container.w3-blue
      address Generated in PGDRE at #{d} | #[a(href="/home") Go back to home!]