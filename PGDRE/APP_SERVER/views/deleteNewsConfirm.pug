extends layout

block content
    .w3-card-4
    header.w3-container.w3-blue
      h1 Página de eliminação de uma Notícia

    .w3-container
        ul.w3-ul 
            li #[b Utilizador: ] #{n.username}
            li #[b Nome do Recurso: ] #{n.resourceName}
            li #[b Evento: ] #{n.event}
            li #[b Data: ] #{n.date}
        center
            h2 Tem a certeza que quer remover esta Notícia?
            button.w3-btn.w3-round.w3-green.w3-margin
                a(href="/news/delete/" + n._id + "/confirm") Confirmar 
            button.w3-btn.w3-round.w3-red.w3-margin
                a(href="/home") Cancelar
                
    footer.w3-container.w3-blue
      address Generated in PGDRE at #{d} | #[a(href="/home") Go back to home!]