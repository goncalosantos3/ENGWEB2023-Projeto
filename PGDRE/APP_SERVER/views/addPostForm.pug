extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Formulário dos Posts

    .w3-container  
      .w3-container.w3-border.w3-margin
        h2 Informação do Recurso Educativo
        ul.w3-ul
          li #[b Resource Name: ] #{r.resourceName}
          li #[b Title: ] #{r.title}
          li #[b Subtitle: ] #{r.subtitle}
          li #[b Type: ] #{r.type}
          li #[b Author: ] #{r.author}

      h2 Adicione o Post:
      form.w3-container(action="/resources/" + r.resourceName + "/posts/add" method="POST")
        fieldset
            input.w3-input(type="hidden" name="resourceName" value=r.resourceName)
            input.w3-input(type="hidden" name="username" value="meter username aqui")
            input.w3-input(type="hidden" name="visibility" value=r.visibility)
            legend Detalhes:
            label Título
            input.w3-input.w3-border.w3-round.w3-margin.w3-light-grey(type="text" name="title")
            label Descrição
            input.w3-input.w3-border.w3-round.w3-margin.w3-light-grey(type="text" name="description")

        input.w3-btn.w3-blue.w3-margin(type="submit" value="Submissão do Post!")

    footer.w3-container.w3-blue
      address Generated in PGDRE at #{d}