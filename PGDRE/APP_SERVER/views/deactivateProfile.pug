extends layout

block content
    .w3-card-4
    header.w3-container.w3-blue
      h1 Página para desativação de um utilizador
      h2 Escolha uma conta para desativar!

    .w3-container
        table.w3-table-all
          tr
            th Nome de Utilizador
            th Nome
            th Email 
            th Nível
            th Desativar

          each u in us
            tr 
                td= u.username
                td= u.name 
                td= u.email 
                td= u.level
                td  
                  a(href="/profile/deactivate/" + u.username) 
                    img.w3-round-xlarge(src="/images/deactivate.png" alt="deactivate icon" width="30" height="30")
    
    footer.w3-container.w3-blue
      address Generated in PGDRE at #{d} | #[a(href="/home") Go back to home!]