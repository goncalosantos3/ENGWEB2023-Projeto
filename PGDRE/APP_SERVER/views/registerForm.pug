extends layout

block content
    .w3-card-4
    header.w3-container.w3-blue
      h1 Register
    
    .w3-container  
      form.w3-container(action="/register" method="POST")
        fieldset 
            legend Infos:

            label Email 
            input.w3-input(type="text" name="email" required)

            label Nome 
            input.w3-input(type="text" name="name" required)

            label Username 
            input.w3-input(type="text" name="username" required)
            
            label Password 
            input.w3-input(type="password" name="password" required)

        fieldset 
          label Nível:
          br
          input(type='radio' name='level' value='producer')
          |  Produtor
          br
          input(type='radio' name='level' value='consumer')
          |  Consumidor
          br
          input(type='radio' name='level' value='admin')
          |  Administrador

        input.w3-btn.w3-blue.w3-margin(type="submit" value="Register!")

      if(erroRole)
        .w3-panel.w3-red  
          h3 Erro no registro do utilizador! 
          p Nível do utilizador não especificado!      

    footer.w3-container.w3-blue
      address Generated in PGDRE at #{d}