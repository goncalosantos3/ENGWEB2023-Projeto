extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Formul√°rio da Foto de Perfil

    .w3-container  
      form.w3-container(action="/profile/profilePic" method="POST" enctype='multipart/form-data')
        fieldset 
            legend Foto de Perfil
            input.w3-input.w3-border.w3-round.w3-margin.w3-light-grey(type="file" name="profilePic") 
        input.w3-btn.w3-green.w3-margin(type="submit" value="Adicionar Foto de Perfil!")
        button.w3-btn.w3-round.w3-red.w3-margin
            a(href="/profile") Cancelar 

      if erro
        .w3-panel.w3-yellow
          h3 Erro!
          p= erro 
    footer.w3-container.w3-blue
      address Generated in PGDRE at #{d} | #[a(href="/home") Go back to home!]