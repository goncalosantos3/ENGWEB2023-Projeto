extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Formulário de edição de perfil

    .w3-container  
      form.w3-container(action="/profile/edit" method="POST")
        fieldset
          legend Não editáveis:
          label Nome de utilizador
          input.w3-input(type="text" name="username" value=u.username readonly)
          label Nível
          input.w3-input(type="text" name="level" value=u.level readonly)
          label Data de criação
          input.w3-input(type="text" name="dateCreated" value=u.dateCreated readonly)
          label Último acesso
          input.w3-input(type="text" name="lastAccess" value=u.lastAccess readonly)

        fieldset  
          legend Editáveis:
          label Email
          input.w3-input.w3-border.w3-round.w3-margin.w3-light-grey(type="text" name="email" value=u.email)
          label Nome
          input.w3-input.w3-border.w3-round.w3-margin.w3-light-grey(type="text" name="name" value=u.name)
          label Password
          input.w3-input.w3-border.w3-round.w3-margin.w3-light-grey(type="password" name="password")
          label Activo
          br
          input(type='radio' name='active' value=true)
          |  Sim
          br
          input(type='radio' name='active' value=false)
          |  Não

        input.w3-btn.w3-blue.w3-margin(type="submit" value="Editar Perfil!")

    footer.w3-container.w3-blue
      address Generated in PGDRE at #{d} | #[a(href="/home") Go back to home!]