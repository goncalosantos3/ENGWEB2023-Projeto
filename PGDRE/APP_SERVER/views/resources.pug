extends layout

block content
    .w3-card-4
    header.w3-container.w3-blue
      h1 Recursos

    .w3-container
        table.w3-table-all
            tr
                th Título
                th Subtítulo
                th Tipo
                th Autor 
            if rs != undefined
                each r in rs 
                    tr 
                        td= r.title
                        if r.subtitle != undefined 
                            td= r.subtitle
                        else 
                            td Indefinido
                        td= r.type
                        td= r.author

    footer.w3-container.w3-blue
      address Generated in PGDRE at #{d}