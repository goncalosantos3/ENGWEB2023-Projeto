extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Edição de um Recurso Educativo

    .w3-container
      h2 Formulário do RE
      form.w3-container(action="/resources/" + r.resourceName + "/edit" method="POST")
        fieldset
          legend Não editáveis:
          label Nome do Recurso 
          input.w3-input(type="text" name="resourceName" value=r.resourceName readonly)
          label Autor
          input.w3-input(type="text" name="author" value=r.author readonly)
          label Ficheiros 
          input.w3-input(type="text" name="files" value=files readonly)
          label Tipo 
          input.w3-input(type="text" name="type" value=r.type readonly)
          label Visibilidade 
          input.w3-input(type="text" name="visibility" value=r.visibility readonly)

        fieldset  
          legend Editáveis:
          label Título
          input.w3-input.w3-border.w3-round.w3-margin.w3-light-grey(type="text" name="title" value=r.title)
          label Subtítulo
          input.w3-input.w3-border.w3-round.w3-margin.w3-light-grey(type="text" name="subtitle" value=r.subtitle)
        
        input.w3-btn.w3-blue.w3-margin(type="submit" value="Editar Recurso!")

    footer.w3-container.w3-blue
      address Generated in PGDRE at #{d}