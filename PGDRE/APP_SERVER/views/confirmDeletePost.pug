extends layout

block content
    .w3-card-4
    header.w3-container.w3-blue
      h1 Página de eliminação de um Post

    .w3-container
        ul.w3-ul 
            li #[b Nome do Recurso: ] #{p.resourceName}
            li #[b Utilizador: ] #{p.username}
            li #[b Título: ] #{p.title}
            li #[b Descrição: ] #{p.description}
            li #[b Gostos: ] #{p.likes}
            li #[b Data: ] #{p.date}

        center
            h2 Tem a certeza que quer remover este Post?
            button.w3-btn.w3-round.w3-green.w3-margin
                a(href="/resources/" + p.resourceName + "/posts/" + p._id + "/delete/confirm") Confirmar 
            button.w3-btn.w3-round.w3-red.w3-margin
                a(href="/resources/" + p.resourceName + "/posts/" + p._id) Cancelar
    
    footer.w3-container.w3-blue
      address Generated in PGDRE at #{d} | #[a(href="/home") Go back to home!]