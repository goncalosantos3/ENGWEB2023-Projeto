extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Plataforma de Gestão e Disponibilização de Recursos Educativos
      h2 Bem-vindo (tenho que meter o nome do user aqui depois)!
    
    .w3-container
        center
            a.w3-margin(href="/resources") Recursos
              img.w3-margin(src="/images/resources.png" alt="resources icon" width="30" height="30")
            a.w3-margin(href="/profile") Perfil
              img.w3-margin(src="/images/profile.png" alt="profile icon" width="30" height="30")
            a.w3-margin(href="/logout") Logout  
              img.w3-margin(src="/images/logout.png" alt="logout icon" width="30" height="30")

    .w3-container.w3-border
        h2 Notícias #[a(href="/news/add") #[img(src="/images/add.png" alt="add icon" width="30" height="30")]]
        table.w3-table-all
          tr 
            th Utilizador
            th Recurso 
            th Evento
            th Data
            th Operações
          each n in news 
            tr 
              td= n.username
              td= n.resourceName 
              td= n.event
              td= n.date  
              td
                a(href="/news/edit/" + n._id)
                  img.w3-round-large.w3-margin-right.w3-margin-left(src="/images/edit.png" alt="edit icon" width="30" height="30")
                a(href="/news/delete/" + n._id)
                  img.w3-round-large.w3-margin-right.w3-margin-left(src="/images/delete.png" alt="delete icon" width="30" height="30")

    footer.w3-container.w3-blue
      address Generated in PGDRE at #{d} | #[a(href="/home") Go back to home!]