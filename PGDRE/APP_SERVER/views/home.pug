extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Plataforma de Gestão e Disponibilização de Recursos Educativos
     
    .w3-container
        center
            button.w3-btn.w3-round.w3-deep-purple.w3-margin
              a(href="/resources") Resources
            button.w3-btn.w3-round.w3-deep-purple.w3-margin
              a(href="/profile") Profile
            button.w3-btn.w3-round.w3-deep-purple.w3-margin
              a(href="/logout") Logout  

    .w3-container.w3-blue
        h2 Bem-vindo (tenho que meter o nome do user aqui depois)!

    .w3-container 
        h2 Notícias 
        table.w3-table-all
          tr 
            th Utilizador
            th Recurso 
            th Tipo
            th Data
          each n in news 
            tr 
              td= n.username
              td= n.resourceName 
              td= n.type
              td= n.date

    footer.w3-container.w3-blue
      address Generated in PGDRE at #{d}