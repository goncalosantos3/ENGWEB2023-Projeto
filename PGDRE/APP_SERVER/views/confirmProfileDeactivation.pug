extends layout

block content
    .w3-card-4
    header.w3-container.w3-blue
      h1 Página de desativação de um utilizador

    .w3-container
        ul.w3-ul 
            li #[b Nome de Utilizador: ] #{u.username}
            li #[b Nome: ] #{u.name}
            li #[b Email: ] #{u.email}
            li #[b Nível: ] #{u.level}
            li #[b Data de Criação: ] #{u.dateCreated}
            li #[b Último Acesso: ] #{u.lastAccess}

        center
            h2 Tem a certeza que quer desativar esta conta?
            button.w3-btn.w3-round.w3-green.w3-margin
                a(href='/profile/deactivate/confirm') Confirmar 
            button.w3-btn.w3-round.w3-red.w3-margin
                a(href='/profile') Cancelar
    
    footer.w3-container.w3-blue
      address Generated in PGDRE at #{d} | #[a(href="/home") Go back to home!]