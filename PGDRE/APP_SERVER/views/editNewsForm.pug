extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Formulário de edição de uma Notícia

    .w3-container  
      form.w3-container(action="/news/edit/" + n._id method="POST")
        fieldset
          legend Não editáveis:
          label Submissor da Notícia
          input.w3-input(type="text" name="username" value=n.username readonly)
          label Data 
          input.w3-input(type="text" name="date" value=n.date readonly)
          label Visibilidade 
          input.w3-input(type="text" name="visibility" value=n.visibility readonly)

        fieldset  
          legend Editáveis:
          label Nome do Recurso 
              select(name="resourceName")
                each r in rs
                  option(value=r.resourceName) #{r.resourceName}
          br
          label Evento
          input.w3-input.w3-border.w3-round.w3-margin.w3-light-grey(type="text" name="event" value=n.event)
        
        input.w3-btn.w3-green.w3-margin(type="submit" value="Editar Notícia!")
        button.w3-btn.w3-round.w3-red.w3-margin
          a(href="/home") Cancelar 
          
    footer.w3-container.w3-blue
      address Generated in PGDRE at #{d} | #[a(href="/home") Go back to home!]